@model MesaPartes.Models.Usuarios
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Iniciar Sesion</h2>

@using (Html.BeginForm())
{     
    //this  is for create form tag
    @Html.AntiForgeryToken()
    // this is for prevent CSRF attack
    @Html.ValidationSummary(true)    

    if (@ViewBag.Message != null)
    {
        <div style="border:1px solid red">
            @ViewBag.Message
        </div>
    }
    <table>
        <tr>
            <td>@Html.LabelFor(a => a.cUsuario)</td>
            <td>@Html.TextBoxFor(a => a.cUsuario)</td>
            <td>@Html.ValidationMessageFor(a => a.cUsuario)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(a => a.cContraseña)</td>
            <td>@Html.PasswordFor(a => a.cContraseña)</td>
            <td>@Html.ValidationMessageFor(a => a.cContraseña)</td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Login" />
            </td>
            <td></td>
        </tr>
    </table>
}